@model WebApplication2.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerSurname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerSurname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerTelephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerTelephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerPassword)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerPassword)
        </dd>

        @*code added*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerPayments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Song Name</th>
                    <th>Composer</th>
                    <th>Category</th>
                </tr>
                @foreach (var item in Model.CustomerPayments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Song.SongName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Song.SongComposer.ComposerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Song.SongCategory.CategoryName)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
